    @media(min-width: 1024px) {
      .image-text-btn-prev-{{ section.id }},
      .image-text-btn-next-{{ section.id }} {
        display: none;
      }
    }
  </style>
{% endif %}

<div class="section-{{ section.id }} image-text-{{ section.id }}" style="background-color:{{ background_color }}; background-image: {{ background_gradient }};">
    <div class="section-{{ section.id }}-settings">
      <div class="image-text-slider-{{ section.id }} swiper">
        <div class="swiper-wrapper">
          {% for item in (1..2) %}
            {% for block in section.blocks %}
              <div class="image-text-slide-{{ section.id }} swiper-slide">
                <div class="image-text-image-{{ section.id }}">
                  
                  {% if block.settings.media_type == "video" %}
                    {% assign video_id = block.settings.video.id | default: block.settings.video_url.id %}
                    {% assign loop = '&loop=1&playlist=' | append: video_id %}  
                    {%- if block.settings.video == null and block.settings.video_url != null -%}
                      {%- if block.settings.video_url.type == 'youtube' -%}
                        <iframe
                          data-src="https://www.youtube.com/embed/{{ video_id }}?enablejsapi=1&mute=1&autoplay=1{{ loop }}"
                          allow="autoplay; encrypted-media"
                          class="lazy"
                          allowfullscreen
                        ></iframe>
                      {%- else -%}
                        <iframe
                          data-src="https://player.vimeo.com/video/{{ video_id }}?enablejsapi=1&mute=1&autoplay=1{{ loop }}"
                          allow="autoplay; encrypted-media"
                          class="lazy"
                          allowfullscreen
                        ></iframe>
                      {% endif %}
                    {% else %}
                       <video
                          data-src="{{ block.settings.video.sources[1].url }}"
                          autoplay
                          muted
                          playsinline
                          preload="none"
                          loop
                          controls
                          class="lazy"
                        ></video>
                    {% endif %}
                  {% else %}
                    {% if block.settings.image != blank %}
                      <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.image.alt }}" {% if lazy %}loading="lazy"{% endif %}>
                    {% else %}
                      {{ 'image' | placeholder_svg_tag }}
                    {% endif %}
                  {% endif %}
                </div>
                <div class="image-text-content-{{ section.id }}">
                  {% if block.settings.heading != blank %}
                    <div class="image-text-heading-{{ section.id }}">
                      {{ block.settings.heading }}
                    </div>
                  {% endif %}
  
                  {% if block.settings.text != blank %}
                    <div class="image-text-text-{{ section.id }}">
                      {{ block.settings.text }}
                    </div>
                  {% endif %}
  
                  {% if block.settings.button != blank %}
                    <a href="{{ block.settings.button_url }}" class="image-text-button-{{ section.id }}">
                        {{ block.settings.button }}
