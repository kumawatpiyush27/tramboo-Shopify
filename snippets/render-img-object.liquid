<img srcset="{% render 'img-srcset' with image: image %}"
  sizes="{{ sizes | default: '(min-width: 750px) 50vw, 100vw' }}"
  src="{{ image | image_url: width: 180 }}"
  alt="{{ image.alt | escape }}"
  loading="lazy"
  width="{{ image.width }}"
  height="{{ image.height }}"
  class="{{ css_classes }}"
>