{%- render 'section-background-start' -%}
<div class="product-template-section container{% if section.settings.full_width %}-fluid{% endif %}{% render 'section-gutters-nobkg' %}" id="ProductSection-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="product" data-enable-history-state="true">
	<div class="row">
		<div class="section__inner col-xs-12">
			{%- render 'section-heading' -%}
			<div class="section__content">
				{%- assign product = all_products[section.settings.product] -%}
        {%- if product != blank -%}
          {%- liquid 
            unless settings.enable_rtl and settings.rtl_language_codes contains request.locale.iso_code
              assign left_holder = 'left'
              assign right_holder = 'right'
              assign enable_rtl = false
            else
              assign left_holder = 'right'
              assign right_holder = 'left'
              assign enable_rtl = true
            endunless  
  					assign current_variant = product.first_available_variant
  					assign featured_media = current_variant.featured_media | default: product.featured_media
            assign sizechart_vendor_key = 'sc_vendor_' | append: product.vendor | downcase | replace: ' ','_'
            assign sizechart_type_key = 'sc_type_' | append: product.type | downcase | replace: ' ','_'
            if template.suffix != 'quick_view'
              if product.metafields.btt.size_chart != blank
                assign current_sizechart = product.metafields.btt.size_chart
              elsif product.metafields.btt[sizechart_type_key] != blank  
                assign current_sizechart = product.metafields.btt[sizechart_type_key]
              elsif product.metafields.btt[sizechart_vendor_key] != blank  
                assign current_sizechart = product.metafields.btt[sizechart_vendor_key]  
              elsif collection and collection.metafields.btt.size_chart and collection.metafields.btt.apply_size_chart_product
                assign current_sizechart = collection.metafields.btt.size_chart 
              elsif product.collections[0] and product.collections[0].metafields.btt.size_chart and product.collections[0].metafields.btt.apply_size_chart_product
                assign current_sizechart = product.collections[0].metafields.btt.size_chart  
              endif
            endif
            assign has_popup_content = false
          -%}
          {%- capture description -%}
            <div class="product-single__description rte">
              {{ product.description }}
            </div>
          {%- endcapture -%}
				  <div class="product-single pg row" data-product-handle="{{ product.handle }}" data-zoom-scope="single" data-ignore-sold-out-text="1">
            <div class="col-xs-12 col-md-6 no-gutter-left-mb no-gutter-right-mb{% if enable_rtl %} f-right{% endif %}{% if section.settings.sticky_images %} pos-sticky{% endif %}">
              {%- render 'product-single-media' with product: product, featured_media: featured_media -%}
            </div>
            <div class="col-xs-12 col-md-6 gutter-ele-top-tbs">
              {%- form 'product', product -%}
                {%- for block in section.blocks -%}
                  {%- case block.type -%}
                  {%- when '@app' -%}
                    {% render block %}
                  {%- when 'text' -%}
                    {%- render 'product-single-text' with product: product, text: block.settings.text, text_style: block.settings.text_style -%}
                  {%- when 'title' -%}
                    {%- render 'product-single-name' with product: product -%}
                  {%- when 'price' -%}
                    {%- render 'product-single-price' with product: product, current_variant: current_variant, show_shipping_policy_link: block.settings.show_shipping_policy_link, block: block, left_holder: left_holder -%}
                  {%- when 'sku' -%}
                    {%- render 'product-single-sku' with product: product, current_variant: current_variant, right_holder: right_holder -%}
                  {%- when 'variant_picker' -%}
                    {%- unless product.has_only_default_variant -%}
                      {%- render 'product-single-variants' with product: product -%}
                    {%- endunless -%}
                  {%- when 'quantity_buy_buttons' -%}
                    {%- render 'product-single-form' with with product: product, current_variant: current_variant, full_qty_box: false, block: block, form: form -%}
                  {%- when 'description' -%}
                    {{ description }}
                  {%- when 'share' -%}
                    {%- render 'product-single-social-sharing' with product: product -%}
                  {%- when 'random_sold_number' -%}
                    {%- render 'product-single-sold' with product: product, block: block -%}
                  {%- when 'countdown_timer' -%}
                    {%- render 'product-single-countdown' with product: product, block: block -%}
                  {%- when 'payment_badge' -%}
                    {%- render 'product-single-payment-badge' with product: product, block: block -%}
                  {%- when 'size_chart' -%}
                    {%- liquid
                      unless current_sizechart != blank
                        if block.settings.use_size_chart_fallback and block.settings.size_chart_fallback != blank
                          assign sizechart = block.settings.size_chart_fallback | img_url: 'master' | img_tag: block.settings.size_chart_fallback.alt, 'img-responsive'
                        elsif product.description contains 'sizechart-table'
                          assign sizechart = 'inline'    
                        endif
                      else
                        assign sizechart = current_sizechart
                      endunless
                    -%}
                    {%- render 'product-single-size-chart' with product: product, block: block, sizechart: sizechart, right_holder: right_holder -%}
                  {%- when 'limited_stock_text' -%}
                    {%- render 'product-single-hurry-up' with product: product, block: block, current_variant: current_variant -%}
                  {%- when 'review_stars' -%}  
                    {%- render 'product-review-single' with product: product -%}
                  {%- when 'store-availability' -%}
                    {%- render 'product-single-store-availability' with product: product, show_top_line: true, show_bottom_line: true -%}
                  {%- when 'collections-tags' -%}
                    {%- render 'product-single-sub-info' with product: product, block: block, right_holder: right_holder -%}
                  {%- when 'custom_field' -%}
                    {%- render 'product-single-customizable-field' with index: 1, block: block, enable_field: true -%}
                  {%- when 'custom_fields_group' -%}
                    {%- render 'product-single-customizable-fields' with block: block -%}
                  {%- when 'collapsible_tab_text' -%}
                    {%- render 'product-single-collapse-tab-text' with product: product, block: block -%}
                  {%- when 'collapsible_tab_desc' -%}
                    {%- render 'product-single-collapse-tab-desc' with product: product, block: block, description: description -%}
                  {%- when 'collapsible_tab_reviews' -%}
                    {%- render 'product-single-collapse-tab-reviews' with product: product, block: block -%}
                  {%- when 'collapsible_tab_toolkit' -%}
                    {%- render 'product-single-collapse-tab-toolkit' with product: product, block: block -%}  
                  {%- when 'popup' -%}
                    {%- render 'product-single-popup-trigger' with product: product, block: block -%}
                    {%- assign has_popup_content = true -%}
                    {%- assign popup_title = block.settings.page.title -%}
                    {%- assign popup_content = block.settings.page.content -%}
                  {%- when 'group_1' -%}
                    {%- if block.settings.show_vendor -%}
                      {%- render 'product-single-vendor' with product: product -%}
                    {%- endif -%}
                    {%- if block.settings.show_title -%}
                      {%- render 'product-single-name' with product: product -%}
                    {%- endif -%}
                    {%- if block.settings.show_sku -%}
                      {%- render 'product-single-sku' with product: product, current_variant: current_variant, right_holder: right_holder -%} 
                    {%- endif -%}
                  {%- when 'group_2' -%}
                    {%- if block.settings.show_review_stars -%}
                      {%- render 'product-review-single' with product: product -%}
                    {%- endif -%}
                    {%- if block.settings.show_price -%}
                      {%- render 'product-single-price' with product: product, current_variant: current_variant, show_shipping_policy_link: block.settings.show_shipping_policy_link, block: block, left_holder: left_holder -%}
                    {%- endif -%}
                    {%- if block.settings.show_countdown -%}
                      {%- render 'product-single-countdown' with product: product, block: block -%}
                    {%- endif -%}
                  {%- when 'group_3' -%}
                    {%- render 'product-single-sub-info' with product: product, block: block, right_holder: right_holder -%}
                    {%- if block.settings.show_payment_badge -%}
                      {%- render 'product-single-payment-badge' with product: product, block: block -%}
                    {%- endif -%}
                    {%- if block.settings.show_sharing_icons -%}
                      {%- render 'product-single-social-sharing' with product: product -%}
                    {%- endif -%}
                  {%- endcase -%}    
                {%- endfor -%}
              {%- endform -%}
            </div>
					</div>
        {%- else -%}
          {% render 'no-blocks' %}  
				{%- endif -%}
			</div>
		</div>
	</div>
  <script type="application/json" id="ModelJson-{{ section.id }}">
    {{ product.media | where: 'media_type', 'model' | json }}
  </script>
</div>
{%- if sizechart and sizechart != 'inline' -%}
<div class="modal fade sizeChartModal sizeChartModal{{ section.id }} hide" tabindex="-1" role="dialog" id="sizeChartModal{{ section.id }}">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" data-dismiss="modal" aria-label="Close" class="close">{% render 'icon-close' %}</button>
      </div>
      <div class="modal-body">
        <div class="rte">
          {{ sizechart }}
        </div>
      </div>
    </div>  
  </div>  
</div>  
{%- endif -%}
{%- if has_popup_content -%}
<div class="modal fade productPopupModal productPopupModal{{ section.id }}" tabindex="-1" role="dialog" id="productPopupModal{{ section.id }}">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" data-dismiss="modal" aria-label="Close" class="close">{% render 'icon-close' %}</button>
      </div>
      <div class="modal-body">
        <h2 style="margin-top:0;">{{ popup_title }}</h2>
        <div class="rte">
          {{ popup_content }}
        </div>
      </div>
    </div>  
  </div>  
</div>  
{%- endif -%}
