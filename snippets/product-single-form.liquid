<script>
(function(){
  var customizeBtn   = document.getElementById('customize-product-btn');
  var modal          = document.getElementById('customize-modal');
  var closeBtn       = document.getElementById('close-customize-modal');
  var engravingInput = document.getElementById('engraving-name');
  var engravingPrev  = document.getElementById('engraving-preview');
  var buyNowBtn      = document.getElementById('buy-now-custom');
  var skipBtn        = document.getElementById('skip-customization');
  var addToCartPrice = document.getElementById('add-to-cart-price');
  var basePrice      = parseInt({{ current_variant.price | divided_by: 100 }}); // ₹
  var customCharge   = 200; // ₹

  /* ---------- helpers ---------- */
  function openModal(){modal.style.display='flex';}
  function closeModal(){modal.style.display='none';reset();}
  function isValidName(n){return /^[A-Za-z0-9 ]{1,12}$/.test(n);}    
  function reset(){engravingInput.value='';engravingPrev.textContent='';buyNowBtn.style.display='none';}

  /* ---------- UI bindings ---------- */
  if(customizeBtn) customizeBtn.addEventListener('click',openModal);
  if(closeBtn)     closeBtn.addEventListener('click',closeModal);
  if(modal)        modal.addEventListener('click',function(e){if(e.target===modal) closeModal();});
  if(skipBtn)      skipBtn.addEventListener('click',function(e){e.preventDefault();closeModal();});
  if(engravingInput){
    engravingInput.addEventListener('input',function(){
      var v=this.value;
      if(isValidName(v)){engravingPrev.textContent=v;engravingPrev.style.display='block';buyNowBtn.style.display='block';}
      else{engravingPrev.textContent='';engravingPrev.style.display='none';buyNowBtn.style.display='none';}
    });
  }

  /* ---------- Buy-Now logic ---------- */
  if(buyNowBtn){
    buyNowBtn.addEventListener('click',function(){
      var name=engravingInput.value;
      if(!isValidName(name)){engravingInput.focus();return;}
      /* 1) add personalised main product */
      fetch('/cart/add.js',{
        method:'POST',headers:{'Content-Type':'application/json'},
        body:JSON.stringify({
          id:{{ current_variant.id }},
          quantity:1,
          properties:{'Engraving Name':name,'Personalization Charge':'+₹200'}
        })
      }).then(r=>r.json())
      /* 2) add addon variant */
      .then(()=>fetch('/cart/add.js',{method:'POST',headers:{'Content-Type':'application/json'},body:JSON.stringify({id:48603629060404,quantity:1})}))
      /* 3) call GoKwik checkout */
      .then(()=>{
        var totalValuePaise=(basePrice+customCharge)*100; // paise
        goToGoKwik(totalValuePaise);
      });
    });
  }

  /* price label */
  if(addToCartPrice){addToCartPrice.textContent=basePrice+customCharge;}
})();
</script>


{% render 'checkout-customize-popup' %}
<script>
(function(){
  var popup=document.getElementById('checkout-customize-popup');
  if(!popup) return;
  function getCart(){return fetch('/cart.js').then(r=>r.json());}
  function updateCart(updates){return fetch('/cart/update.js',{method:'POST',headers:{'Content-Type':'application/json'},body:JSON.stringify({updates:updates})}).then(r=>r.json());}
  function removeAllExcept(vid){return getCart().then(cart=>{
    var u={};cart.items.forEach(i=>{u[i.variant_id]=(i.variant_id==vid)?i.quantity:0;});return updateCart(u);});}
  function removeVariant(vid){return getCart().then(cart=>{
    var u={};cart.items.forEach(i=>{u[i.variant_id]=(i.variant_id==vid)?0:i.quantity;});return updateCart(u);});}

  document.getElementById('checkout-with-customize').onclick=function(){
    var vid=window.__JUST_ADDED_VARIANT_ID;if(!vid) return;
    removeAllExcept(vid).then(()=>goToGoKwik('{{ cart.total_price | default:0 }}'));
  };

  document.getElementById('checkout-with-other').onclick=function(){
    var vid=window.__JUST_ADDED_VARIANT_ID;if(!vid) return;
    removeVariant(vid).then(()=>popup.style.display='none');
  };
})();
</script>

