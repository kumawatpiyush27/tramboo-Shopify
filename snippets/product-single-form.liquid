<script async src="https://cdn.gokwik.co/assets/js/sdk/v2/gokwik-sdk.min.js"></script>
<script>
  /* static merchant config */
  window.merchantInfo = {
    merchant_code : '19g6jlpwftku6',             // ★ replace
    callback_url  : '{{ shop.url }}/apps/gokwik/callback'
  };
  /* helper – call anywhere instead of window.location.href = '/checkout' */
  function goToGoKwik(totalValuePaise) {
    if (window.gokwikSdk && typeof window.gokwikSdk.initCheckout === 'function') {
      window.merchantInfo.order_value = totalValuePaise; // in paise
      window.gokwikSdk.initCheckout(window.merchantInfo);
    } else {
      console.warn('GoKwik SDK missing, falling back to Shopify checkout');
      window.location.href = '/checkout';
    }
  }
</script>


