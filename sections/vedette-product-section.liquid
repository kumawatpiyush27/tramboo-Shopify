theme.libs.vedette = {
	"css": ["{{ 'cloudzoom.css' | asset_url }}","{{ 'quick-view.css' | asset_url }}","{{ 'product-single.css' | asset_url }}"]
};
theme.loadedLibs.push("quickViewPopup");
