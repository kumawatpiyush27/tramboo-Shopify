<div class="bottom-mobile-toolbar bmt flex flex-align-space-between flex-align-ver hidden-sm hidden-md hidden-lg">
	{%- if settings.enable_wishlist -%}
		<div class="bmt__item gutter-ele-small-top gutter-ele-small-bottom text-center">
			<a href="javascript:void(0);" class="header__link--wishlist flex flex-align-hoz" title="{{ 'general.accessibility.your_wishlist' | t | escape }}" rel="nofollow">
				<div class="por flex">
					{%- render 'icon-wishlist' with add_class: 'fw-bold bmt__icon' -%}
					<span class="wishlist-number abs-number bmt__abs-number fw-bold"></span>
				</div>
				<span class="w100 db text-center fw-bold bmt__text">{{ 'general.accessibility.your_wishlist' | t }}</span>
			</a>
		</div>
	{%- endif -%}
	{%- if settings.enable_compare -%}
		<div class="bmt__item gutter-ele-small-top gutter-ele-small-bottom text-center">
			<a href="javascript:void(0);" class="header__link--compare flex flex-align-hoz" title="{{ 'general.accessibility.your_compare' | t | escape }}" rel="nofollow">
				<div class="por flex">
					{%- render 'icon-compare' with add_class: 'fw-bold bmt__icon' -%}
					<span class="compare-number abs-number bmt__abs-number fw-bold"></span>
				</div>
				<span class="w100 db text-center fw-bold bmt__text">{{ 'general.accessibility.your_compare' | t }}</span>
			</a>
		</div>
	{%- endif -%}
	{%- if template.name != 'cart' -%}
	<div class="bmt__item gutter-ele-small-top gutter-ele-small-bottom text-center">
		<a href="{{ routes.cart_url }}" class="flex flex-align-hoz">
			<div class="por flex">
				{%- render 'icon-cart-header' with add_class: 'fw-bold bmt__icon' -%}
				<span class="cart-number abs-number bmt__abs-number fw-bold">{{ cart.item_count }}</span>
			</div>
			<span class="w100 db text-center fw-bold bmt__text">{{ 'layout.cart.title' | t }}</span>
		</a>
	</div>
	{%- endif -%}
	{%- unless template.name == 'search' -%}
	<div class="bmt__item gutter-ele-small-top gutter-ele-small-bottom text-center">
		<a href="javascript:void(0);" class="search-full-trigger flex flex-align-hoz" rel="nofollow">
			{%- render 'icon-search' with add_class: 'bmt__icon' -%}
			<span class="w100 db text-center bmt__text fw-bold">{{ 'layout.navigation.search' | t }}</span>
		</a>
	</div>
	{%- endunless -%}
	{%- unless template.name == 'collection' -%}
		<div class="bmt__item gutter-ele-small-top gutter-ele-small-bottom text-center">
			<a href="{{ routes.all_products_collection_url }}" class="flex flex-align-hoz">
				{%- render 'icon-shop' with add_class: 'bmt__icon' -%}
				<span class="w100 db text-center bmt__text fw-bold">
					{{ 'layout.navigation.shop' | t }}
				</span>
			</a>
		</div>	
	{%- endunless -%}
	{%- if has_collection_filter -%}
	<div class="bmt__item gutter-ele-small-top gutter-ele-small-bottom text-center">
		<a href="javascript:void(0);" class="bt-sidebar-btn flex flex-align-hoz" data-target="#sidebar-filter" data-placement="{% unless enable_rtl %}left{% else %}right{% endunless %}" data-placement-mobile="up" title="{{ 'collections.general.filter' | t | escape }}" rel="nofollow">
			<div class="por flex">
				{%- render 'icon-filter' with add_class: 'bmt__icon' -%}
				<span class="abs-number bmt__abs-number filter-active-number fw-bold hide"></span>
			</div>
			<span class="w100 db text-center bmt__text fw-bold">
				{{ 'collections.general.filter' | t }}
			</span>
		</a>
	</div>
	{%- endif -%}
</div>